{
  "name": "node-express-es6-starter",
  "version": "0.4.2",
  "description": "A sample Node.js app using Express 4",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint \"./**/*.js\"",
    "lint": "npm run lint",
    "start:dev": "nodemon --watch views --watch src --watch public -e js,twig,html,css server.js",
    "start:dep": "ENV=deployment node server.js",
    "start": "npm run start:dev",
    "test": "mocha --compilers js:babel-core/register",
    "todo": "leasot ./src/**/*.js server.js --tags error,info || true"
  },
  "dependencies": {
    "express": "4.14.0",
    "gulp-messenger": "0.25.3",
    "lodash": "4.17.2",
    "twig": "0.10.1"
  },
  "engines": {
    "node": "4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikeerickson/node-express-es6-starter.git"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "ignore": [
      "node_modules"
    ]
  },
  "author": "Mike Erickson <codedungeon@mail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-preset-es2015": "6.18.0",
    "chai": "3.5.0",
    "eslint": "3.10.2",
    "leasot": "4.2.0",
    "mocha": "3.1.2",
    "nodemon": "1.11.0",
    "todo-webpack-plugin": "1.5.1"
  },
  "bugs": {
    "url": "https://github.com/mikeerickson/node-express-es6-starter/issues"
  },
  "homepage": "https://github.com/mikeerickson/node-express-es6-starter#readme",
  "directories": {
    "test": "test"
  },
  "reveal": true
}
